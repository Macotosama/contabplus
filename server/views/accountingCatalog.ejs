<script type="text/javascript">
	$(document).ready(function(){
		handleTableData();
		
	});
	isFirtsDatatable = true;
	function handleTableData () {
		$('#listAccountingCatalog').bootstrapTable({
			height: getHeight(),
			method: 'GET',
			url: '/contab/listAccountingCatalog',
			cache: false,
			columns: [
				{
					field: 'accCode',
					title: 'Número de catálogo',
					sortable: true,
					width: '10%'
				}, {
					field: 'accName',
					title: 'Nombre de catálogo',
					sortable: true,
					width: '25%'
				}, {
					field: 'accQuantityNivels',
					title: 'Cantidad de niveles',
					sortable: true,
					width: '5%'
				}, {
					field: 'accStatus',
					title: 'Estado',
					sortable: true,
					width: '15%'
				}
			]
		});
	};
	function getHeight() {
		return $(window).height();
	}
</script>