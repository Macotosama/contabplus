<% include partials/footer %>
<script type="text/javascript">
	$(document).ready(function(){
		handleTableData();
		$('#accQuantityNivels').change(function() {
			for(var i=0; i<13; i++){
				if(i <= $('#accQuantityNivels').val()) {
					$('#labelTextNivel'+i).show();
					$('#accName'+i).show();
					$('#accNivel'+i).show();
				}
				else{
					$('#labelTextNivel'+i).hide();
					$('#accName'+i).hide();
					$('#accNivel'+i).hide();
				}
			}
			
		});
		$('#accSeparatorCheck').change(function() {						
			if( $('#accSeparatorCheck').prop('checked') ) {
				$('#divSeparator').hide();
			}
			else{
				$('#divSeparator').show();
			}
		})

		// hide default values
		$('#divSeparator').hide();
		for(var i=2; i<13; i++){			
				$('#labelTextNivel'+i).hide();
				$('#accName'+i).hide();
				$('#accNivel'+i).hide();
		}
	});
	isFirtsDatatable = true;
	function handleTableData () {
		$('#listUsers').bootstrapTable({
			height: getHeight(),
			method: 'GET',
			url: '/contab/users',
			cache: false,
			columns: [
				{
					field: 'useName',
					title: 'Nombre',
					sortable: true,
					width: '10%'
				}, {
					field: 'useLogin',
					title: 'Email',
					sortable: true,
					width: '5%'
				}, {
					field: 'usePhone',
					title: 'TelÃ©fono',
					sortable: true,
					width: '15%'
				}, {
					field: 'usersRole.role.rolName',
					title: 'Rol',
					sortable: false,
                    width: '15%'
				}, {
					field: 'usersRole.role.rolName',
					title: 'Editar Rol',
					sortable: false,
                    width: '15%',
                    // events: operateEvents,
					formatter: operateFormatter
				}, {
					field: 'useStatus',
					title: 'Estado',
					sortable: false,
                    width: '15%',
                    events: operateEvents2,
					formatter: operateFormatter2
                }
                
			]
		});
	};
	function getHeight() {
		return $(window).height();
    }
    // window.operateEvents = {
    //     'click .btnEditarRol': function (e, value, row, index) {
    //         console.log('ingresa')
    //         console.log(row.useId)
    //         $('#userId').val(row.useId);            
    //         $('#modalRol').modal('show');
    //     }
    // };
    function editRol(id){
        $('#userId').val(id);            
        $('#modalRol').modal('show');
    }
    function operateFormatter(value, row, index) {
        return [
            "<button type='button' class='btn green btnEditarRol' onClick='editRol("+row.useId+")'> <i class='icon-user'></i> Editar Rol </button>"
        ].join('');
    }

    window.operateEvents2 = {
        'click .btnActiveInactive': function (e, value, row, index) {
            fnActiveInactive(row, index);
        }
    };
    function operateFormatter2(value, row, index) {
        return [
            "<button type='button' class='btn ",
            ((row.useStatus == 1) ? "red" : "green"),
            " btnActiveInactive'>",
            "<i class='icon-off'></i> ",
            ((row.useStatus == 1) ? "Inactivar" : "Activar"),
            "</button>"
        ].join('');
    }
    function refreshTable() {
        $('.bt-table').bootstrapTable('refresh', {silent: true});
    }
    function fnActiveInactive(row, indx) {
        $.ajax({
            type: "POST",
            url: "/contab/users/changeStatus?useId="+row.useId+"&status="+row.useStatus,
            beforeSend: function(){ //se muestra una imagen mientras el ajax se ejecuta
                showIsLoading("Procesando...");
            }
        }).done(function (data) {
            refreshTable()
        }).fail(function (data) {
            fnOpenErrorDialog(data.responseJSON._error.message);
        }).always(function (data) {
            hideIsLoading();
        });
    }
	function fnSaveRol(){
		$.ajax({
            type: "POST",
			url: "/contab/saveRol",
			data: $('#updateRol').serialize(), //se envia el form serializado
            beforeSend: function(){ //se muestra una imagen mientras el ajax se ejecuta
                showIsLoading("Procesando...");
            }
        }).done(function (data) {
			refreshTable();
			$('#modalRol').modal('hide');
        }).fail(function (data) {
            fnOpenErrorDialog(data.responseJSON._error.message);
        }).always(function (data) {
            hideIsLoading();
        });
	}

	function fnAddSaveRol(){
		$.ajax({
            type: "POST",
			url: "/contab/saveRol",
			data: $('#addRolForm').serialize(), //se envia el form serializado
            beforeSend: function(){ //se muestra una imagen mientras el ajax se ejecuta
                showIsLoading("Procesando...");
            }
        }).done(function (data) {
			refreshTable();
			$('#modalRol').modal('hide');
        }).fail(function (data) {
            fnOpenErrorDialog(data.responseJSON._error.message);
        }).always(function (data) {
            hideIsLoading();
        });
	}
</script>